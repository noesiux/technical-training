<odoo>
    <!-- Vista tipo Árbol para Estate Property -->
    <record id="view_estate_property_tree" model="ir.ui.view">
        <field name="name">estate.property.tree</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <tree string="Estate Properties">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <!-- Vista tipo Formulario para Estate Property -->
    <record id="view_estate_property_form" model="ir.ui.view">
        <field name="name">estate.property.form</field>
        <field name="model">estate.property</field>
        <field name="arch" type="xml">
            <form string="Estate Property">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción para mostrar las vistas de Estate Property -->
    <record id="action_estate_property" model="ir.actions.act_window">
        <field name="name">Estate Properties</field>
        <field name="res_model">estate.property</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Menú para acceder a Estate Property -->
    <menuitem id="menu_estate_root" name="Estate" sequence="1"/>
    <menuitem id="menu_estate_property" name="Properties" parent="menu_estate_root" action="action_estate_property" sequence="2"/>
</odoo>
